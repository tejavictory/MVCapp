@model IEnumerable<WebApplication2.Models.Slot>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Plan", "Index", new { sortOrder = ViewBag.AbbrSortParm })
            </th>
            <th>
                @Html.ActionLink("Term", "Index", new { sortOrder = ViewBag.TermSortParm })
            </th>
            <th>
                @Html.ActionLink("Credit", "Index", new { sortOrder = ViewBag.NumberSortParm })
            </th>
            <th>
                @Html.ActionLink("Status", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DegreePlanSelected)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Term)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credit.CreditId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SlotId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SlotId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SlotId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
